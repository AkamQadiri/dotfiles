#!/bin/bash

case $BLOCK_BUTTON in
	2) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

battery=$(cloud_flight -r | awk '/Battery:/ {print $2}' | sed 's/[^0-9]//g')
battery_icon=""

if [ -z "$battery" ]; then
	printf " "
	exit
fi

if [ "$battery" -ge "90" ]; then
	battery_icon=""
elif [ "$battery" -ge "75" ]; then
	battery_icon=""
elif [ "$battery" -ge "50" ]; then
	battery_icon=""
elif [ "$battery" -ge "25" ]; then
	battery_icon=""
fi

printf " $battery_icon"
