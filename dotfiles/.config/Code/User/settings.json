{
    "editor.fontFamily": "'Droid Sans Mono', 'monospace', monospace,'Font Awesome 6 Brands', 'Font Awesome 6 Free', 'Font Awesome 6 Free Solid'",
    "explorer.fileNesting.patterns": {
        "*.cshtml": "${basename}.cshtml.cs, ${basename}.cshtml.css",
        "*.json": "${basename}.json, ${basename}.Development.json"
    },
    "explorer.fileNesting.enabled": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.defaultCloneDirectory": "~/source",
    "files.dialog.defaultPath": "~/source",
    "files.exclude": {
        "**/bin": true,
        "**/obj": true
    },
    "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor"
    },
    "html.format.wrapLineLength": 0,
    "editor.formatOnSave": true
}
