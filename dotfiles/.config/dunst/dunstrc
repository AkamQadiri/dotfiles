# Dunst Notification Daemon Configuration
# See dunst(5) for all configuration options

[global]
    # === DISPLAY ===
    monitor = 0
    follow = mouse
    
    # === GEOMETRY ===
    width = 300
    height = 300
    origin = top-right
    offset = 10x50
    scale = 0
    notification_limit = 0
    
    # === PROGRESS BAR ===
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    
    # === APPEARANCE ===
    # Transparency (requires compositor)
    transparency = 15
    
    # Separators
    separator_height = 1
    separator_color = frame
    
    # Padding
    padding = 8
    horizontal_padding = 10
    text_icon_padding = 0
    
    # Gaps
    gaps = true
    gap_size = 15
    
    # Frame
    frame_width = 0
    frame_color = "#282a36"
    
    # === CONTENT ===
    # Sort by urgency
    sort = yes
    
    # Show age of message
    show_age_threshold = 60
    
    # Word wrap
    word_wrap = yes
    
    # Ignore newlines in notifications
    ignore_newline = no
    
    # Stack duplicate notifications
    stack_duplicates = true
    hide_duplicate_count = false
    
    # Display indicators
    show_indicators = yes
    indicate_hidden = yes
    
    # === TEXT ===
    font = monospace 12
    line_height = 0
    
    # Markup
    markup = full
    format = "<b>%s</b>\n%b"
    
    # Alignment
    alignment = left
    vertical_alignment = center
    
    # Show age of message
    show_age_threshold = 60
    
    # Ellipsize
    ellipsize = middle
    
    # === ICONS ===
    icon_position = left
    min_icon_size = 0
    max_icon_size = 32
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/
    
    # === HISTORY ===
    sticky_history = yes
    history_length = 20
    
    # === MISC ===
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox
    
    # Always run rule-defined scripts
    always_run_script = true
    
    # Title and class
    title = Dunst
    class = Dunst
    
    # === MOUSE ===
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

# === URGENCY SETTINGS ===
[urgency_low]
    background = "#282A36"
    foreground = "#F8F8F2"
    timeout = 10

[urgency_normal]
    background = "#282A36"
    foreground = "#F8F8F2"
    timeout = 10

[urgency_critical]
    background = "#FF5555"
    foreground = "#F8F8F2"
    frame_color = "#FF6E6E"
    timeout = 0